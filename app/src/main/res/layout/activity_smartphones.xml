<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".Smartphones">

    <EditText
        android:id="@+id/edit_search"
        style="@style/Edit_Text"
        android:hint="Pesquisar no Compra FÃ¡cil"
        android:drawableRight="@drawable/ic_search"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/text_title_smartphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Smartphones"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/edit_search"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/image_smartphone"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:src="@drawable/smartphone1"
        app:layout_constraintTop_toBottomOf="@+id/text_title_smartphone"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_smartphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_smartphone"
        android:layout_marginHorizontal="30dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Smartphone Edge 30 Neo 5g 256gb 8gb Ram Very Peri Motorola"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_preco_smartphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$ 1.462,05"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/text_smartphone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_comprar"
        style="@style/Button"
        android:text="Adicionar ao carrinho"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_preco_smartphone"/>

</androidx.constraintlayout.widget.ConstraintLayout>