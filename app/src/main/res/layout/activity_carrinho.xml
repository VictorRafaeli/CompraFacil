<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".Carrinho">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Carrinho de Compras"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image_smartphone"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/smartphone1"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_smartphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Smartphone Edge 30 Neo 5g 256gb Very Peri Motorola"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="160sp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toEndOf="@+id/image_smartphone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/button_editar_smartphone"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="Editar"
        app:backgroundTint="@color/blue"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_smartphone"
        app:layout_constraintStart_toEndOf="@+id/image_smartphone"/>

    <Button
        android:id="@+id/button_excluir"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="Excluir"
        app:backgroundTint="@color/red"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_smartphone"
        app:layout_constraintStart_toEndOf="@+id/button_editar_smartphone"/>

    <EditText
        android:id="@+id/edit_quantidade"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="01"
        android:layout_marginLeft="32dp"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/button_editar_smartphone"
        app:layout_constraintStart_toEndOf="@+id/image_smartphone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 1.462,05"
        android:layout_marginTop="8dp"
        android:textSize="19dp"
        android:layout_marginLeft="28dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/button_editar_smartphone"
        app:layout_constraintStart_toEndOf="@+id/edit_quantidade"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:layout_marginTop="200dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image_notebook"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/notebook1"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_notebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notebook Acer Amd Ryzen 7 5700u A515 8gb 512gb Ssd"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="160sp"
        android:layout_marginTop="210dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toEndOf="@+id/image_notebook"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/button_editar_notebook"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="Editar"
        app:backgroundTint="@color/blue"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_notebook"
        app:layout_constraintStart_toEndOf="@+id/image_notebook"/>

    <Button
        android:id="@+id/button_excluir_notebook"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="Excluir"
        app:backgroundTint="@color/red"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_notebook"
        app:layout_constraintStart_toEndOf="@+id/button_editar_notebook"/>

    <EditText
        android:id="@+id/edit_quantidade_notebook"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="01"
        android:layout_marginLeft="32dp"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/button_editar_notebook"
        app:layout_constraintStart_toEndOf="@+id/image_notebook"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 3.499,00"
        android:layout_marginTop="8dp"
        android:textSize="19dp"
        android:layout_marginLeft="28dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/button_editar_notebook"
        app:layout_constraintStart_toEndOf="@+id/edit_quantidade_notebook"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:layout_marginTop="340dp"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image_livro"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/livro1"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/text_livro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Caixa Harry Potter - Edição Premium, de Rowling, J. K."
        android:textSize="15sp"
        android:textColor="@color/black"
        android:layout_marginStart="160sp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toEndOf="@+id/image_livro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/button_editar_livro"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="Editar"
        app:backgroundTint="@color/blue"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_livro"
        app:layout_constraintStart_toEndOf="@+id/image_livro"/>

    <Button
        android:id="@+id/button_excluir_livro"
        android:layout_width="90dp"
        android:layout_height="36dp"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="Excluir"
        app:backgroundTint="@color/red"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/text_livro"
        app:layout_constraintStart_toEndOf="@+id/button_editar_livro"/>

    <EditText
        android:id="@+id/edit_quantidade_livro"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:text="01"
        android:layout_marginLeft="32dp"
        android:textAlignment="center"
        android:layout_marginTop="4dp"
        android:background="@color/grey"
        app:layout_constraintTop_toBottomOf="@+id/button_editar_livro"
        app:layout_constraintStart_toEndOf="@+id/image_livro"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 212,50"
        android:layout_marginTop="8dp"
        android:textSize="19dp"
        android:layout_marginLeft="28dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/button_editar_livro"
        app:layout_constraintStart_toEndOf="@+id/edit_quantidade_livro"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:layout_marginTop="600dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="R$ 5.173,55"
        android:layout_marginTop="138dp"
        android:textSize="19dp"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/image_livro"
        app:layout_constraintStart_toEndOf="@+id/edit_quantidade_livro"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:layout_marginTop="138dp"
        android:textSize="19dp"
        android:layout_marginLeft="-170dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/image_livro"
        app:layout_constraintStart_toEndOf="@+id/edit_quantidade_livro"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_comprar"
        style="@style/Button"
        android:text="Finalizar Compra"
        android:layout_marginTop="190dp"
        android:textSize="21dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_livro"/>

</androidx.constraintlayout.widget.ConstraintLayout>