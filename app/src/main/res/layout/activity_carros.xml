<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_light"
    tools:context=".Carros">

    <EditText
        android:id="@+id/edit_search"
        style="@style/Edit_Text"
        android:hint="Pesquisar no Compra FÃ¡cil"
        android:drawableRight="@drawable/ic_search"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="30dp"/>

    <TextView
        android:id="@+id/text_title_carro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Carros"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/edit_search"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:id="@+id/image_game"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/carro1"
        app:layout_constraintTop_toBottomOf="@+id/text_title_carro"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/text_carro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_game"
        android:layout_marginHorizontal="30dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:text="Hyundai I30 I30 2.0 16V 145CV 5P AUT."
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/text_preco_carro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="R$ 42.900,00"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/text_carro"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_comprar"
        style="@style/Button"
        android:text="Adicionar ao carrinho"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_preco_carro"/>

</androidx.constraintlayout.widget.ConstraintLayout>